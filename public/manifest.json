{
  "manifest_version": 3,
  "name": "ShotGridRodeoFx",
  "author": "kevin.zarshenas@gmail.com",
  "description": "Extension for improving Shotgun UI.",
  "homepage_url": "https://github.com/kekefreedog",
  "version": "2.1.0",
  "content_scripts": [
    {
      "matches": ["https://shotgun.rodeofx.com/*"],
      "run_at": "document_idle",
      "css": ["./style.css"],
      "js": ["./contentScript/index.js"]
    }
  ],
  "action": {
    "default_popup": "./popup/index.html",
    "default_title": "Open the popup"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "kevin.zarshenas@gmail.com",
      "strict_min_version": "100.0"
    }
  },
  "permissions": ["activeTab", "clipboardWrite"],
  "icons": {
    "72": "icon-72x72.png",
    "96": "icon-96x96.png",
    "128": "icon-128x128.png",
    "144": "icon-144x144.png",
    "152": "icon-152x152.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["logo-white.png","logo-black.png", "logo-black-square.png", "logo-whote-square.png"],
      "matches": ["https://shotgun.rodeofx.com/*", "https://rodeofx.shotgrid.autodesk.com/*"]
    }
  ]
}
